  <script>
const backend = 'https://manage.telegramd.com';

  // –ó–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ ALB —Å–µ—Ä—Ç–∏—Ñ—ñ–∫–∞—Ç—ñ–≤
  const loadAlbStats = async () => {
    const certCountEl = document.getElementById('certCount');
    const albGroupEl = document.getElementById('albGroup');
    const statCard = document.querySelector('.stat-card');
    
    // –ü–æ—á–∞—Ç–∏ –∞–Ω—ñ–º–∞—Ü—ñ—é –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è
    certCountEl.classList.add('loading');
    certCountEl.textContent = '‚Ä¢‚Ä¢‚Ä¢';
    albGroupEl.textContent = '–ó–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è...';
    
    try {
      // –û—Ç—Ä–∏–º—É—î–º–æ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –ø–æ—Ç–æ—á–Ω–æ–≥–æ ALB
      const response = await fetch(`${backend}/alb/current-stats`);
      
      if (!response.ok) {
        throw new Error('Failed to fetch ALB stats');
      }
      
      const data = await response.json();
      
      // –û–Ω–æ–≤–ª–µ–Ω–Ω—è UI
      certCountEl.textContent = data.certificate_count;
      const freeText = data.remaining >= 0 ? 
        `${data.remaining} ${window.i18n?.t('stats.free') || '–≤—ñ–ª—å–Ω–æ'}` : 
        `${window.i18n?.t('stats.exceeded') || '–ø–µ—Ä–µ–≤–∏—â–µ–Ω–æ –Ω–∞'} ${Math.abs(data.remaining)}`;
      albGroupEl.textContent = `${window.i18n?.t('stats.alb') || 'ALB'}: ${data.group_name} (${freeText})`;
      
      // –ü—Ä–∏–±—Ä–∞—Ç–∏ –∞–Ω—ñ–º–∞—Ü—ñ—é
      certCountEl.classList.remove('loading');
      
      // –û–Ω–æ–≤–ª–∏—Ç–∏ —Å—Ç–∏–ª—ñ –∑–∞–ª–µ–∂–Ω–æ –≤—ñ–¥ —Å—Ç–∞—Ç—É—Å—É
      statCard.classList.remove('status-good', 'status-warning', 'status-critical');
      statCard.classList.add(`status-${data.status}`);
      
    } catch (error) {
      console.error('Error loading ALB stats:', error);
      certCountEl.textContent = '?';
      albGroupEl.textContent = window.i18n?.t('stats.load-error') || '–ü–æ–º–∏–ª–∫–∞ –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è';
      certCountEl.classList.remove('loading');
      
      // –ü—Ä–∏–±—Ä–∞—Ç–∏ –≤—Å—ñ —Å—Ç–∞—Ç—É—Å–∏ –ø—Ä–∏ –ø–æ–º–∏–ª—Ü—ñ
      const statCard = document.querySelector('.stat-card');
      statCard.classList.remove('status-good', 'status-warning', 'status-critical');
    }
  };
  
  // –ó–∞–≤–∞–Ω—Ç–∞–∂–∏—Ç–∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –ø—Ä–∏ –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—ñ —Å—Ç–æ—Ä—ñ–Ω–∫–∏
  loadAlbStats();
  
  // –û–Ω–æ–≤–ª—é–≤–∞—Ç–∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –∫–æ–∂–Ω—ñ 30 —Å–µ–∫—É–Ω–¥
  setInterval(loadAlbStats, 30000);
  
  // –û–Ω–æ–≤–ª–µ–Ω–Ω—è —Ñ–ª–∞–≥–∞ –≤ –ø–µ—Ä–µ–º–∏–∫–∞—á—ñ –º–æ–≤
  function updateLanguageFlag() {
    const flagIcon = document.getElementById('flag-icon');
    const currentLang = document.getElementById('current-lang');
    
    if (flagIcon && window.i18n) {
      const lang = window.i18n.getCurrentLanguage();
      flagIcon.className = `flag flag-${lang}`;
    }
  }
  
  // –û–±—Ä–æ–±–∫–∞ –ø–µ—Ä–µ–º–∏–∫–∞–Ω–Ω—è –º–æ–≤–∏ –¥–ª—è —Ü—ñ—î—ó —Å—Ç–æ—Ä—ñ–Ω–∫–∏
  function handleLanguageToggle() {
    updateLanguageFlag();
    // –ü–µ—Ä–µ–∑–∞–≤–∞–Ω—Ç–∞–∂–∏—Ç–∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –∑ –Ω–æ–≤–æ—é –º–æ–≤–æ—é
    setTimeout(loadAlbStats, 100);
  }
  
  // –ü–æ–¥—ñ—è –Ω–∞ –∑–º—ñ–Ω—É –º–æ–≤–∏
  document.addEventListener('languageChanged', handleLanguageToggle);
  
  // –û–Ω–æ–≤–ª—é–≤–∞—Ç–∏ —Ñ–ª–∞–≥ –ø—ñ—Å–ª—è —ñ–Ω—ñ—Ü—ñ–∞–ª—ñ–∑–∞—Ü—ñ—ó —Å–∏—Å—Ç–µ–º–∏ –ª–æ–∫–∞–ª—ñ–∑–∞—Ü—ñ—ó
  setTimeout(updateLanguageFlag, 100);

    const getJson = async (url) => {
      const res = await fetch(url);
      if (!res.ok) throw new Error(await res.text());
      return res.json();
    };

    const postJson = async (url, body) => {
      const currentLang = window.i18n ? window.i18n.getCurrentLanguage() : 'uk';
      const res = await fetch(url, {
        method: 'POST',
        headers: { 
          'Content-Type': 'application/json',
          'Accept-Language': currentLang
        },
        body: JSON.stringify(body)
      });
      if (!res.ok) throw new Error(await res.text());
      return res.json();
    };

    document.getElementById('createForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const submitBtn = e.target.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      
      submitBtn.classList.add('loading');
      submitBtn.disabled = true;
      
      const fd = new FormData(e.target);
      const payload = Object.fromEntries(fd.entries());
      payload.create_pr = !!fd.get('create_pr');
      payload.auto_merge = !!fd.get('auto_merge');
      try {
        const data = await postJson(backend + '/clients', payload);
        const domain = data.domain || payload.domain || '';
        const subdomain = data.subdomain || payload.subdomain || '';
        const host = subdomain && domain ? `${subdomain}.${domain}` : '';
        const albValue = data.alb_dns_name || '';
        document.getElementById('createResult').innerHTML = `
          <div style="border:1px solid rgba(148,163,184,0.25);border-radius:10px;padding:14px;background:rgba(255,255,255,0.02);line-height:1.5">
            <div style="margin-bottom:8px;color:#e5e7eb">Please add the following CNAME records to the ${domain} DNS configuration</div>
            <div style="margin:8px 0;color:#cbd5e1">SSL/TLS certificate validation:</div>
            <div>DNS Name: <code>${data.dns_name}</code></div>
            <div>DNS Value: <code style="word-break:break-all">${data.dns_value}</code></div>
            <div style="margin:12px 0 6px;color:#cbd5e1">Cabinet DNS record:</div>
            <div>Name: <code>${host}</code></div>
            <div>Value: <code>${albValue || '<< set ALB_PUBLIC_HOSTNAME in backend env >>'}</code></div>
          </div>
        `;
        loadAlbStats(); // –û–Ω–æ–≤–∏—Ç–∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É
      } catch (err) {
        document.getElementById('createResult').innerHTML = `<pre>${err.message}</pre>`;
      } finally {
        submitBtn.classList.remove('loading');
        submitBtn.disabled = false;
      }
    });



    document.getElementById('reissueForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const submitBtn = e.target.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      
      submitBtn.classList.add('loading');
      submitBtn.disabled = true;
      
      const fd = new FormData(e.target);
      const payload = {
        domain: fd.get('domain'),
        update_database: true,  // –ó–∞–≤–∂–¥–∏ —É–≤—ñ–º–∫–Ω–µ–Ω–æ
        update_ingress: true,   // –ó–∞–≤–∂–¥–∏ —É–≤—ñ–º–∫–Ω–µ–Ω–æ
        delete_old_cert: true   // –ó–∞–≤–∂–¥–∏ —É–≤—ñ–º–∫–Ω–µ–Ω–æ
      };
      
      try {
        const data = await postJson(backend + '/cert/reissue-full', payload);
        
        let resultHtml = `
          <div style="border: 1px solid #22c55e; border-radius: 8px; padding: 16px; background: rgba(34, 197, 94, 0.05); margin-top: 16px;">
            <h3 style="color: #22c55e; margin: 0 0 12px 0;">‚úÖ –£—Å–ø—ñ—à–Ω–æ –æ–Ω–æ–≤–ª–µ–Ω–æ!</h3>
            <p><strong>Old Certificate ARN:</strong> <code style="word-break: break-all;">${data.old_certificate_arn || '–ù–µ–º–∞—î'}</code></p>
            <p><strong>New Certificate ARN:</strong> <code style="word-break: break-all;">${data.new_certificate_arn}</code></p>
            <p><strong>Status:</strong> <span style="color: ${data.status === 'ISSUED' ? '#22c55e' : data.status === 'PENDING_VALIDATION' ? '#fbbf24' : '#ef4444'}">${data.status}</span></p>
            <p><strong>–û–Ω–æ–≤–ª–µ–Ω–æ –∫–ª—ñ—î–Ω—Ç—ñ–≤:</strong> ${data.clients_updated}</p>
            <p><strong>–û–Ω–æ–≤–ª–µ–Ω–æ —Ñ–∞–π–ª—ñ–≤:</strong> ${data.files_updated}</p>
          </div>
          
          <div style="border: 1px solid #fbbf24; border-radius: 8px; padding: 16px; background: rgba(251, 191, 36, 0.05); margin-top: 16px;">
            <h4 style="color: #fbbf24; margin: 0 0 8px 0;">üîë DNS –í–∞–ª—ñ–¥–∞—Ü—ñ—è</h4>
            <p><strong>DNS Name:</strong> <code>${data.dns_name}</code></p>
            <p><strong>DNS Value:</strong> <code style="word-break: break-all;">${data.dns_value}</code></p>
          </div>
          
          <div style="border: 1px solid #06b6d4; border-radius: 8px; padding: 16px; background: rgba(6, 182, 212, 0.05); margin-top: 16px;">
            <h4 style="color: #06b6d4; margin: 0 0 8px 0;">üìù –ù–∞—Å—Ç—É–ø–Ω—ñ –∫—Ä–æ–∫–∏:</h4>
            <ol style="margin: 0; padding-left: 20px;">
              ${data.next_steps.map(step => `<li>${step}</li>`).join('')}
            </ol>
          </div>
        `;
        
        if (data.warning) {
          resultHtml += `
            <div style="border: 1px solid #ef4444; border-radius: 8px; padding: 16px; background: rgba(239, 68, 68, 0.05); margin-top: 16px;">
              <h4 style="color: #ef4444; margin: 0 0 8px 0;">‚ö†Ô∏è –ü–æ–ø–µ—Ä–µ–¥–∂–µ–Ω–Ω—è</h4>
              <p style="margin: 0;">${data.warning}</p>
            </div>
          `;
        }
        
        document.getElementById('reissueResult').innerHTML = resultHtml;
        
      } catch (err) {
        document.getElementById('reissueResult').innerHTML = `
          <div style="border: 1px solid #ef4444; border-radius: 8px; padding: 16px; background: rgba(239, 68, 68, 0.05); margin-top: 16px;">
            <h3 style="color: #ef4444; margin: 0 0 12px 0;">‚ùå –ü–æ–º–∏–ª–∫–∞</h3>
            <pre style="white-space: pre-wrap; word-break: break-word;">${err.message}</pre>
          </div>
        `;
      } finally {
        submitBtn.classList.remove('loading');
        submitBtn.disabled = false;
      }
    });
    
    // –û–±—Ä–æ–±–Ω–∏–∫ –∑–º—ñ–Ω–∏ –º–æ–≤–∏ –¥–ª—è –æ–Ω–æ–≤–ª–µ–Ω–Ω—è –ø–µ—Ä–µ–∫–ª–∞–¥—ñ–≤
    document.addEventListener('languageChanged', function() {
      // –û—á–∏—Å—Ç–∏—Ç–∏ –∫–µ—à –ø–µ—Ä–µ–∫–ª–∞–¥—ñ–≤ i18n
      if (window.i18n && window.i18n.updatePageTexts) {
        window.i18n.updatePageTexts();
      }
    });

  </script>
  </div>
